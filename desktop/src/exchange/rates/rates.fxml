<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>

<GridPane fx:controller="exchange.rates.Rates"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          prefHeight="475.0" prefWidth="600.0" stylesheets="/exchange/rates/rates.css">

    <Label styleClass="header" text="LBP Exchange Rate"
           textAlignment="CENTER" GridPane.columnSpan="2"
           GridPane.rowIndex="1"
           GridPane.halignment="CENTER"/>

    <Label styleClass="value-label" text="Buy USD Rate" GridPane.columnIndex="0"
           GridPane.rowIndex="4"/>

    <Label fx:id="buyUsdRateLabel" styleClass="value" text="Buy Rate"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <Label styleClass="value-label" text="Sell USD Rate" GridPane.columnIndex="1"
           GridPane.rowIndex="4"/>

    <Label fx:id="sellUsdRateLabel" styleClass="value" text="Sell Rate"
           GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Separator orientation="HORIZONTAL" GridPane.RowIndex="6"
               GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <TextField fx:id="usdTextField" text="enter USD value" GridPane.columnIndex="0" GridPane.rowIndex="7">
        <Label GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    </TextField>

    <TextField fx:id="lbpTextField" text="enter LBP value" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Label GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    </TextField>

    <RadioButton text="Buy USD" GridPane.columnIndex="0" GridPane.rowIndex="8">
        <toggleGroup>
            <ToggleGroup fx:id="transactionType"/>
        </toggleGroup>
    </RadioButton>

    <RadioButton text="Sell USD" toggleGroup="$transactionType" GridPane.columnIndex="0" GridPane.rowIndex="9"/>

    <Button text="Add Transaction" GridPane.columnIndex="0" GridPane.rowIndex="10"
            onAction="#addTransaction"/>

    <Label styleClass="value-label" text="Exchange Calculator" GridPane.columnIndex="0"
           GridPane.rowIndex="11"/>

    <TextField fx:id="calculatorInput" text="Amount" GridPane.columnIndex="0" GridPane.rowIndex="12">
        <Label GridPane.columnIndex="0" GridPane.rowIndex="12"/>
    </TextField>

    <Label fx:id="calculatorOutputLabel" styleClass="value" text="" GridPane.columnSpan="2"
           GridPane.rowIndex="14"/>

    <RadioButton text="USD" GridPane.columnIndex="1" GridPane.rowIndex="12">
        <toggleGroup>
            <ToggleGroup fx:id="conversionType"/>
        </toggleGroup>
    </RadioButton>

    <RadioButton text="LBP" toggleGroup="$conversionType" GridPane.columnIndex="1" GridPane.rowIndex="13"/>

    <Button text="Convert" GridPane.columnIndex="0" GridPane.rowIndex="13"
            onAction="#calculateExchange"/>

</GridPane>